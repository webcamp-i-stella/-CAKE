<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <body class="d-flex flex-column vh-100">
     <header class="shadow-sm">
      <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
       <div class="container">
        <a class="navbar-brand p-3" href="/"><%="ながのCAKE" %></a>
         <!--<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">-->
         <!-- <span class="navbar-toggler-icon"></span>-->
         <!--</button>-->
         <!--<div class="collapse navbar-collapse" id="navbarNavDropdown">-->
        　<ul class="navbar-nav ml-auto">
           <% if customer_signed_in? %>
           <li class = "nav-item">
             <%= link_to "マイページ", customers_my_page_path %>
           </li>
           <li class = "nav-item">
            <%= link_to "商品一覧", products_path %>
           </li>
           <li class = "nav-item">
            <%= link_to "カート", cart_products_path %>
          </li>
          <li class = "nav-item">
            <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
          </li>
          <% elsif admin_user_signed_in? %>
          <li class = "nav-item">
            <%= link_to "商品一覧", admin_products_path %>
          </li>
          <li class = "nav-item">
            <%= link_to "会員一覧", admin_customers_path %>
          </li>
          <li class = "nav-item">
           <%= link_to "注文履歴一覧" %>
          </li>
          <li class = "nav-item">
            <%= link_to "ジャンル一覧", admin_genres_path %>
          </li>
          <li class = "nav-item">
            <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
          </li>
          <% else %>
          <li class = "nav-item">
            <%= link_to "About", homes_about_path %>
          </li>
          <li class = "nav-item">
            <%= link_to "商品一覧", products_path %>
          </li>
          <li class = "nav-item">
            <%= link_to "新規登録", new_customer_registration_path %>
          </li>
          <li class = "nav-item">
            <%= link_to "ログイン", new_customer_session_path %>
          </li>
          <% end %>
         </ul>
        </div>
      </div>
     </nav>
    </header>
    <main class ="mb-auto">
      <%= yield %>
    </main>
  </body>
</html>
