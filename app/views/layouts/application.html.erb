<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/721f0cdc29.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <body class="d-flex flex-column vh-100">
     <header class="shadow-sm">
      <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
       <div class="container">
        <a class="navbar-brand p-3" href="/"><%="ながのCAKE" %></a>
         <!--<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">-->
         <!-- <span class="navbar-toggler-icon"></span>-->
         <!--</button>-->
         <!--<div class="collapse navbar-collapse" id="navbarNavDropdown">-->
        　<ul class="list-group list-group-horizontal">
           <% if customer_signed_in? %>
           <li class = "nav-item mr-3">
             <p>ようこそ、<%= current_customer.family_name %>さん！</p>
           </li>
           <li class = "nav-item mr-3">
             <%= link_to "マイページ", customers_my_page_path, class: "btn btn-outline-secondary" %>
           </li>
           <li class = "nav-item mr-3">
            <%= link_to "商品一覧", products_path, class: "btn btn-outline-secondary" %>
           </li>
           <li class = "nav-item mr-3">
            <%= link_to "カート", cart_products_path, class: "btn btn-outline-secondary" %>
          </li>
          <li class = "nav-item mr-3">
            <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-secondary" %>
          </li>
          <% elsif admin_user_signed_in? %>
          <li class = "nav-item mr-3">
            <%= link_to "商品一覧", admin_products_path, class: "btn btn-outline-secondary" %>
          </li>
          <li class = "nav-item mr-3">
            <%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-secondary" %>
          </li>
          <li class = "nav-item mr-3">
           <%= link_to "注文履歴一覧", admin_orders_path(order_sort: 0), class: "btn btn-outline-secondary" %>
          </li>
          <li class = "nav-item mr-3">
            <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-outline-secondary" %>
          </li>
          <li class = "nav-item mr-3">
            <%= link_to "ログアウト", destroy_admin_user_session_path, method: :delete, class: "btn btn-outline-secondary" %>
          </li>
          <% else %>
          <li class = "nav-item mr-3">
            <%= link_to "About", homes_about_path, class: "btn btn-outline-secondary" %>
          </li>
          <li class = "nav-item mr-3">
            <%= link_to "商品一覧", products_path, class: "btn btn-outline-secondary" %>
          </li>
          <li class = "nav-item mr-3">
            <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-secondary" %>
          </li>
          <li class = "nav-item mr-3">
            <%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-secondary" %>
          </li>
          <% end %>
         </ul>
        </div>
    　 </nav>
    </header>
    <main class ="mb-auto">
      <%= yield %>
    </main>
    <footer>
      <div class="footer"></div>
    </footer>
  </body>
</html>
