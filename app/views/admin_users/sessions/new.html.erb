<div class="container">
  <div class="row">
    <div class="col-6 col-offset-3">
      <h4 class="log-in-admin">管理者ログイン</h4>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="ml-5">
          <tbody>
            <tr>
              <td><%= f.label :メールアドレス %></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
            <tr>
              <td><%= f.label :パスワード %></td>
              <td><%= f.password_field :password, autocomplete: "current-password" %></td>
            </tr>
            <tr>
              <td></td>
              <td> <%= f.submit "ログイン", class: 'btn btn-primary' %></td>
            </tr>
          </tbody>
        </table>
      <% end %>