<h4>注文履歴詳細</h4>

<table class="tabel">
  <thead>
      <th></th>
      <th></th>
  </thead>

  <tbody>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td>〒<%= @order.order_postal_code %>
          <%= @order.order_address %></br>
          <%= @order.order_name %>
      </td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td><%= @order.payment_method %></td>
    </tr>
    <tr>
      <td>注文ステータス</td>
      <td><%= @order.order_status %></td>
    </tr>
  </tbody>
</table>


 <div class="col-4">
    <h4>請求情報</h4>
      <table class="table">
        <thead>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <tr>
            <td>商品合計</td>
            <td><%= @order.order_details.sum(:tax_price) %></td>
          </tr>
          <tr>
            <td>配送料</td>
            <td><%= @order.shipping_fee.to_i %></td>
          </tr>
          <tr>
            <td>ご請求額</td>
            <td><%=  @order.order_details.sum(:tax_price) + @order.shipping_fee.to_i %></td>
          </tr>
        </tbody>
      </table> 
    </div>


<div class="container">
  <div class="row">
    <div class="col-8">
      <h4>注文内容</h4>
      <table class="table">
        <thead class="thead-light">
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.product.name %></td>
              <td><%= order_detail.tax_price %></td>
              <td><%= order_detail.order_count %></td>
              <td><%= order_detail.tax_price %></td>
            </tr>
          <% end %>
        </tbody>
      </table>  
    </div>
  </div>
</div>