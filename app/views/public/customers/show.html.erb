<h2>マイページ</h2>
<h3>登録情報</h3>
<%= link_to "編集する", edit_customers_path %>
<table>
  <tbody>
    <tr>
      <th>氏名</th>
      <th>
        <%= @customer.family_name %>
        <%= @customer.first_name %>
      </th>
    </tr>
    <tr>
      <th>カナ</th>
      <th>
        <%= @customer.family_name_kana %>
        <%= @customer.first_name_kana %>
      </th>
    </tr>
    <tr>
      <th>郵便番号</th>
      <th><%= @customer.postal_code %></th>
    </tr>
    <tr>
      <th>住所</th>
      <th><%= @customer.address %></th>
    </tr>
    <tr>
      <th>電話番号</th>
      <th><%= @customer.phone %></th>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <th><%= @customer.email %></th>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <th>
        <% if @customer.is_deleted == false %>
          <p>有効</p>
        <% else %>
          <p>退会済み</p>
        <% end %>
      </th>
    </tr>
  </tbody>
</table>
<h3>配送先</h3>
<%= link_to "一覧を見る", shipping_addresses_path %>
<h3>注文履歴</h3>
<%= link_to "一覧を見る", orders_path %>

