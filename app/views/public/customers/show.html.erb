<div class="container">
  <div class="row">
    <div class="col-6 col-offset-3">
      <h4 class="customer-mypage">マイページ</h4>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-2 col-offset-1">
      <h4>登録情報</h4>
    </div>
    <div class="col-2 ">
      <%= link_to "編集する", edit_customers_path, class: 'btn btn-success' %>
    </div>
  </div>
  <div class="row">
    <div class="col-6 col-offset-1">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="table-secondary">氏名</th>
            <th>
              <%= @customer.family_name %>
              <%= @customer.first_name %>
            </th>
          </tr>
          <tr>
            <th class="table-secondary">カナ</th>
            <th>
              <%= @customer.family_name_kana %>
              <%= @customer.first_name_kana %>
            </th>
          </tr>
          <tr>
            <th class="table-secondary">郵便番号</th>
            <th><%= @customer.postal_code %></th>
          </tr>
          <tr>
            <th class="table-secondary">住所</th>
            <th><%= @customer.address %></th>
          </tr>
          <tr>
            <th class="table-secondary">電話番号</th>
            <th><%= @customer.phone %></th>
          </tr>
          <tr>
            <th class="table-secondary">メールアドレス</th>
            <th><%= @customer.email %></th>
          </tr>
          <tr>
            <th class="table-secondary">会員ステータス</th>
           <th>有効</th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-2 col-offset-1">
      <h4>配送先</h4>
    </div>
    <div class="col-2 ">
      <%= link_to "一覧を見る", shipping_addresses_path, class: 'btn btn-primary' %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-2 col-offset-1">
      <h4>注文履歴</h4>
    </div>
    <div class="col-2 ">
      <%= link_to "一覧を見る", orders_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
