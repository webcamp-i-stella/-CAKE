<h2>配送先登録/一覧</h>
<%= form_with model:@shipping_address do |f| %>
  <label>郵便番号</label>
  <%= f.text_field :postal_code %><br>
  <label>住所</label>
  <%= f.text_field :address %><br>
  <label>宛名</label>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>
<table>
  <thead>
    <tr>
      <td>郵便番号</td>
      <td>住所</td>
      <td>宛名</td>
      <td></td>
    </tr>
  </thead>
  <% @shipping_addresses.each do |shipping_address| %>
    <tbody>
      <tr>
        <th><%= shipping_address.postal_code %></th>
        <th><%= shipping_address.address %></th>
        <th><%= shipping_address.name %></th>
        <th>
          <%= link_to "編集する", edit_shipping_address_path(shipping_address) %>
          <%= link_to "削除する", shipping_address_path(shipping_address), method: :delete %>
        </th>
      </tr>
    </tbody>
  <% end %>
</table>

