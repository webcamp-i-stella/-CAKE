<div class="container">
  <div class="row">
    <div class="col-2 offset-1">
      <h4 class="products-index">商品新規登録</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-6 offset-3">
      <%= form_with model: @product,url: "/admin/products", local:true do |f| %>
      <table>
        <tbody>
          <tr>
            <td>商品画像</td>
            <td><%= f.attachment_field :image %></td>
          </tr>
          <tr>
            <td>商品名</td>
            <td><%= f.text_field :name, size: 30 %></td>
          </tr>
          <tr>
            <td>商品説明文</td>
            <td><%= f.text_area :discription, size: "30x10" %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name,:include_blank => "選択してください", size: 30 %></td>
          </tr>
          <tr>
            <td>税抜価格</td>
            <td><%= f.text_field :no_tax_price, size: 30 %>円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <%= f.radio_button :is_active, :true %>
              <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>

              <%= f.radio_button :is_active, :false %>
              <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>
