<div class="container">
  <div class="row">
    <div class="col-6 offset-1">
      <h4 class="customer-show">
        <%= @customer.family_name %><%= @customer.first_name %>
        さんの会員編集
      </h4>
    </div>
  </div>
  <div class="row">
    <div class="col-9 offset-1">
      <%= form_with model: @customer, url:admin_customer_path, local:true do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>会員ID</td>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
              <td>氏名</td>
              <td><%= f.text_field :family_name %></td>
              <td><%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :family_name_kana %></td>
              <td><%= f.text_field :first_name_kana %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= f.text_field :address, size: 30 %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= f.text_field :phone %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.email_field :email %></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td>
                <%= f.radio_button :is_deleted , :false %>
                <%= f.label :is_deleted, "有効" %>
                <%= f.radio_button :is_deleted , :true %>
                <%= f.label :is_deleted, "退会" %>
              </td>
            </tr>
          </tbody>
        </table>
        <%= f.submit '変更を保存', class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>
