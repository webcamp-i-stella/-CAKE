<div class="container">
  <div class="row">
    <div class="col-4 offset-1">
      <h4 class="genre-index">ジャンル編集</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <%= form_with model:@genre, url:"/admin/genres/#{@genre.id}", local: true do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>ジャンル名</td>
            <td><%= f.text_field :name, class: "form-control" %></td>
            <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
