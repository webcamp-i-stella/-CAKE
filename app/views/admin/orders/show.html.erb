<h2>注文履歴詳細</h2>

<table class="tabel">
  <thead>
      <th></th>
      <th></th>
  </thead>

  <tbody>
    <tr>
      <td>購入者</td>
      <td><%= @order.customer.family_name %><%= @order.customer.first_name %></td>
    </tr>
    <tr>
      <td>購入日</td>
      <td><%= @order.created_at %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td>〒<%= @order.order_postal_code %>
          <%= @order.order_address %></br>
          <%= @order.order_name %>
      </td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td><%= @order.payment_method %></td>
    </tr>
    <tr>
      <td>注文ステータス</td>
      <td><%= form_with model: @order, url:admin_order_path(@order), local: true do |f| %>
          <%= f.select :order_status, Order.order_statuses %>
          <%= f.submit "更新", class: "btn btn-primary" %>
          <% end %>
      </td>
    </tr>
  </tbody>
</table>

<table class="table">
  <thead>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th>制作ステータス</th>
  </thead>

 
<table class="table">
  <thead>
    <th></th>
    <th></th>
  </thead>

  <tbody>
    <tr>
      <td>商品合計</td>
      <td><%= @order.total_price %>円</td>
    </tr>
    <tr>
      <td>送料</td>
      <td><%= @order.shipping_fee.to_i %>円</td>
    </tr>
    <tr>
      <td>請求額合計</td>
      <td><%= @order.total_price.to_i + @order.shipping_fee.to_i %>円</td>
    </tr>
  </tbody>
</table> 