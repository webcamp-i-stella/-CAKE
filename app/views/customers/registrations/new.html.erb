<div class="container">
  <div class="row">
    <div class="col-6 col-offset-3">
      <h4 class="sign-up-title">新規会員登録</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>

        <table>
          <tbody>
            <tr>
              <td>名前</td>
              <td>
                <%= f.label :"(姓)" %>
                <%= f.text_field :family_name, autofocus: true %>
              </td>
              <td>
                <%= f.label :"(名)" %>
                <%= f.text_field :first_name, autofocus: true %>
              </td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td>
                <%= f.label :"(セイ)" %>
                <%= f.text_field :family_name_kana, autofocus: true %>
              </td>
              <td>
                <%= f.label :"(メイ)" %>
                <%= f.text_field :first_name_kana, autofocus: true %>
              </td>
            </tr>
            <tr>
              <td><%= f.label :メールアドレス %></td>
              <td><%= f.email_field :email, autofocus: true %></td>
              <td></td>
            </tr>
            <tr>
              <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
              <td><%= f.text_field :postal_code, autofocus: true %></td>
              <td></td>
            </tr>
            <tr>
              <td><%= f.label :"住所" %></td>
              <td><%= f.text_field :address, autofocus: true %></td>
            </tr>
            <tr>
              <td><%= f.label :"電話番号(ハイフンなし)" %></td>
              <td><%= f.text_field :phone, autofocus: true %></td>
              <td></td>
            </tr>
            <tr>
              <td>
                <%= f.label :"パスワード" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上)</em>
                <% end %>
              </td>
              <td><%= f.password_field :password %></td>
              <td></td>
            </tr>
            <tr>
              <td><%= f.label :"パスワード(確認用)" %></td>
              <td><%= f.password_field :password_confirmation %></td>
              <td></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "新規登録", class: 'btn btn-success' %></td>
              <td></td>
            </tr>
          </tbody>
        </table>
      <% end %>
      <h4 class="customer-already-signup">既に登録済みの方</h4>
      <%= render "customers/shared/links" %>
    </div>
  </div>
</div>

