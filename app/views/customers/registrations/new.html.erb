<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <p>名前</p>
  <div class="field">
    <%= f.label :"(姓)" %><br />
    <%= f.text_field :family_name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :"(名)" %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <p>フリガナ</p>
  <div class="field">
    <%= f.label :"(セイ)" %><br />
    <%= f.text_field :family_name_kana, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :"(メイ)" %><br />
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"住所" %><br />
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"電話番号(ハイフンなし)" %><br />
    <%= f.text_field :phone, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: 'btn btn-primary' %>
  </div>
<% end %>
<h2>既に登録済みの方</h2>
<%= render "customers/shared/links" %>
